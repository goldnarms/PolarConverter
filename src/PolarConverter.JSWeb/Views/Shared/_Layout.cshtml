<!DOCTYPE html>

<html>
<head prefix="og: http://ogp.me/ns# fb: http://ogp.me/ns/fb# article: http://ogp.me/ns/article#">
    <meta property="og:image" content="http://polarconverter.azurewebsites.net/content/images/bgBilde.jpg" />
    <meta property="og:site_name" content="PolarConverter" />
    <meta property="fb:app_id" content="128362510636193">
    <meta property="og:type" content="website">
    <meta property="og:description" content="Convert your Polar files to Endomondo and Strava compatible files.">
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
	<link href='http://fonts.googleapis.com/css?family=Open+Sans:600,400,300' rel='stylesheet' type='text/css'>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/bundles/fileupload/angularjs/css")
    @Scripts.Render("~/bundles/modernizr")
    <script src="https://timezonedb.googlecode.com/files/timezonedb.js" type="text/javascript"></script>
    <!--[if lt IE 9]><script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script><![endif]-->
    <!--[if IE]><meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1"><![endif]-->
    <meta name="description" content="Convert your Polar files to Endomondo and Strava compatible files." />
</head>
<body data-ng-app="polarApp">
    @{
        var showUpdate = true;
    }
    @Html.Partial("Plugins/_FacebookSdk")
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="~/" class="logo">
                    <img src="~/Content/polarLogo01_small.png" height="40" />
                </a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @*<li>@Html.ActionLink("Home", "Index", "Home")</li>*@
                    @if (Request.IsAuthenticated)
                    {
                        <li>@Html.ActionLink("Files", "Files", "Home")</li>
                        <li>@Html.ActionLink("User profile", "UserProfile", "Home")</li>
                    }
                    <li>@Html.ActionLink("F.A.Q.", "Faq", "Home")</li>
                    <li>@Html.ActionLink("Changelog", "Changelog", "Home")</li>
                </ul>
                @if (showUpdate)
                {
                    @Html.Partial("_LoginPartial")
                }
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - PolarConverter</p>
        </footer>
    </div>
    @Html.Partial("Plugins/_Analytics")
    @Scripts.Render("~/bundles/libraries")
    @Scripts.Render("~/bundles/fileupload/angularjs/js")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
